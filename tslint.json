{
  "extends": [
    "tslint:latest",
    "tslint-react"
  ],
  "rules": {
    "jsx-no-multiline-js": false,
    "jsx-alignment": false,
    "semicolon": [
      true,
      "never"
    ],
    "quotemark": [
      true,
      "single",
      "jsx-double",
      "avoid-escape"
    ],
    "ordered-imports": [
      false
    ],
    "jsx-boolean-value": [
      false
    ],
    "member-access": [true, "no-public"],
    "no-implicit-dependencies": [true, "dev"]
  }
}
